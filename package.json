{
  "name": "aiad-website",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "lint": "eslint . --ext .ts,.astro",
    "lint:fix": "eslint . --ext .ts,.astro --fix",
    "typecheck": "astro check && tsc --noEmit",
    "format": "prettier --write .",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:a11y": "playwright test tests/a11y/",
    "test:a11y:headed": "playwright test tests/a11y/ --headed",
    "test:a11y:mobile": "playwright test tests/a11y/ --project=mobile",
    "test:a11y:report": "playwright test tests/a11y/ --reporter=html && playwright show-report",
    "test:e2e": "playwright test tests/e2e/",
    "test:e2e:reading": "playwright test tests/e2e/hero-reading-time.e2e.test.ts",
    "test:e2e:headed": "playwright test tests/e2e/ --headed",
    "test": "vitest run"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.0",
    "@astrojs/mdx": "^3.1.0",
    "@astrojs/sitemap": "^3.2.0",
    "@astrojs/tailwind": "^5.1.0",
    "astro": "^4.16.0",
    "lucide-astro": "^0.556.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@playwright/test": "^1.58.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^1.2.0",
    "prettier": "^3.3.0",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0",
    "zod": "^3.23.0"
  }
}
